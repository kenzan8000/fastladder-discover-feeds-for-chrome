{
    "name": "Fastladder Discover Feeds for Chrome",
    "version": "1.0.0",
    "manifest_version": 2,

    "description": "Chrome Extension helping you discover RSS feeds to register on your Fastladder.",

    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "http://*/*/",
        "https://*/*/"
    ],

    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "background": {
        "scripts": ["js/app.js"]
    },

    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Fastladder Discover Feeds for Chrome"
    },

    "options_page": "view/options.html"
}
